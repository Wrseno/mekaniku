{
  "name": "mekaniku-api",
  "version": "1.0.0",
  "description": "Production-ready workshop management platform API",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "seed": "tsx prisma/seed.ts",
    "studio": "prisma studio",
    "generate": "prisma generate",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "openapi": "tsx src/openapi/generate.ts"
  },
  "keywords": [
    "hono",
    "typescript",
    "prisma",
    "firebase",
    "postgresql",
    "workshop",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.16.4",
    "@hono/zod-validator": "^0.4.1",
    "@prisma/client": "^5.22.0",
    "bcrypt": "npm:bcryptjs@2.4.3",
    "dotenv": "^16.4.7",
    "firebase-admin": "^12.6.0",
    "hono": "^4.6.11",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.7",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.8.7",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "bcryptjs": "^3.0.2",
    "eslint": "^9.14.0",
    "prisma": "^5.22.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
